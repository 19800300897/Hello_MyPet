/**index.wxss**/
@import "../../weui.wxss";
@import "common.wxss";
label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}

.bannerSwiper {
  height: 300rpx;
  width: 80vw;
  position: relative;
  left: 50rpx;
  top: 10rpx;
}


.imageBanner {
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  padding: 0;
  line-height: 100%;
  background: transparent;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  text-align: left;
}

.imageBanner_small {
  transform: scale(0.93);
  transition: 0.2s, ease-in 0s;
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: -16rpx;
  z-index: 100;
  padding: 0;
  line-height: 100%;
  background: transparent;
  text-align: left;
}

