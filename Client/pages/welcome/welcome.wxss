/**index.wxss**/
.container{
  display: flex; /* 将对象作为弹性伸缩盒显示 */
  flex-direction: column; /* 灵活的项目将垂直显示，正如一个列一样。 */
  align-items: center;
  overflow: hidden;
  width: 100vw;
  height: 100vh;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-nickname {
  color: #aaa;
}

.journey-container {
  position: fixed;
  border: 1px solid #405f80;
  width: 240rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 80vh;/*970*/
}

.journey {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
.bg{
  position: fixed;
   top:0;
   left:0;
   width:100%;
   height:100%;
   z-index:-1;
   background-size: 100% 100%;
}

.btnImg {
  width: 50rpx;
  height: 50rpx;
}